<form action="/figures/<%= @figure.id %>" method="post">

  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <h3>Edit Titles:</h3>
    <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.name %>" <%= 'checked' if @figure.titles.include?(title) %> >
      <%= title.name %>
      </input>
    <% end %>

  <h3>Edit Landmarks:</h3>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%= 'checked' if @figure.landmarks.include?(landmark) %> >
      <%= landmark.name %>
    </input>
    <% end %>

  <h3>Add Landmark:</h3>
  <label for="new_landmark">Landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark">



  <h3>Add Title:</h3>
  <label for="new_title">Title:</label>
    <input type="text" name="title[name]" id="new_title">

    <input type="submit" value="Edit Figure">
</form>
